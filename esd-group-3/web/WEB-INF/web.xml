<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>dbname</param-name>
        <param-value>Users</param-value>
    </context-param>
    <servlet>
        <display-name>LoginServlet</display-name>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>LogoutServlet</display-name>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>InvoiceViewerServlet</display-name>
        <servlet-name>InvoiceViewerServlet</servlet-name>
        <servlet-class>com.InvoiceViewerServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>NewUserServlet</display-name>
        <servlet-name>NewUserServlet</servlet-name>
        <servlet-class>com.NewUserServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>SignupServlet</display-name>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>com.SignupServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>NewEmployeeServlet</display-name>
        <servlet-name>NewEmployeeServlet</servlet-name>
        <servlet-class>com.NewEmployeeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IssueInvoiceServlet</servlet-name>
        <servlet-class>com.IssueInvoiceServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InvoiceDownload</servlet-name>
        <servlet-class>com.InvoiceDownload</servlet-class>
    </servlet>
    <servlet>
        <display-name>NewReferralServlet</display-name>
        <servlet-name>NewReferralServlet</servlet-name>
        <servlet-class>com.NewReferralServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InvoiceViewerServlet</servlet-name>
        <url-pattern>/InvoiceViewerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewUserServlet</servlet-name>
        <url-pattern>/NewUserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/SignupServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewEmployeeServlet</servlet-name>
        <url-pattern>/NewEmployeeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IssueInvoiceServlet</servlet-name>
        <url-pattern>/IssueInvoiceServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InvoiceDownload</servlet-name>
        <url-pattern>/InvoiceDownload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewReferralServlet</servlet-name>
        <url-pattern>/NewReferralServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
